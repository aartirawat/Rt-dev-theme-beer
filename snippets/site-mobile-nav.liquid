<div class="site-mobile-nav" id="site-mobile-nav" data-mobile-nav>
  <div class="mobile-nav-panel" data-mobile-nav-panel>

    

    <a
      class="mobile-nav-close"
      href="#site-header-nav"
      data-mobile-nav-close>
      {% include 'icon-menu-close' %}
      <span class="show-for-sr">{{ 'general.accessibility.close' | t }}</span>
    </a>

    <div class="mobile-nav-content">
      {%
        include 'navmenu',
        menu: section.settings.menu,
        depth: 1,
        max_depth: 3,
        submenu_arrows: true,
        has_triggers: true,
        aria_expanded: false
        blocks: blocks
      %}
    </div>
    
    {% include 'site-header-actions' %}
    
    <div class="nav-cart-btn">
      <a class="" href="/cart">
        {% include 'icon-cart' %} <span>My shopping cart</span>
        <span class="show-for-sr">{{ 'general.accessibility.cart' | t }}</span>
        <span
              class="site-header-cart--count {% if cart.item_count > 0 %}visible{% endif %}"
              data-header-cart-count="{% if cart.item_count > 0 %}{{ cart.item_count }}{% endif %}">
        </span>
        <script>
          {%- comment -%} Bold:POv2.5 HYBRID {%- endcomment -%}
          (function(){
            var cart = BOLD.common.cartDoctor.rawCart;
            cart = BOLD.common.cartDoctor.fix(cart);
            if (cart.item_count>0) {
              var cartCount= cart.item_count;
              //debugger;
              let cartCountElm = document.querySelector(".site-header-cart--count");
              cartCountElm.dataset.headerCartCount = cartCount;
            }
          })();
        </script>

      </a>
    </div>

  </div>

  <div class="mobile-nav-overlay" data-mobile-nav-overlay></div>
</div>
