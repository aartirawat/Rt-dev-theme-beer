
<div class="container">
  <div class="employment-icon__header text-center">
    {%if section.settings.title != blank %}
    <h2 class="section-subtitle">{{section.settings.title}}</h2>
    {%endif%}
    {%if section.settings.text != blank %}
    {{section.settings.text}}
    {%endif%}
  </div>
  <div class="employment-icon__wrapper">
    {% for block in section.blocks %}
    <div class="employment-icon__item">
      <div class="icon-wrapper wow fadeIn">
        <span class="wow fadeIn" style="background-image: url({{block.settings.icon | img_url: "200x" }})">
        </span>
      </div>
      <span class="employment-icon__des">{{block.settings.title}}</span>
    </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Page Employment Icon",
    "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Section Title"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }
	],
    "blocks":[
          {
            "type": "icon",
            "name": "Column with image",
            "settings": [
              {
                "type": "image_picker",
                "id": "icon",
                "label": "Icon"
              },
              {
                "type": "text",
                "id": "title",
                "label": "Title Column"
              }
          
            ]
      }
	]
  }
{% endschema %}

